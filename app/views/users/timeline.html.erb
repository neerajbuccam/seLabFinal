<% if current_user.follow_count > 0 %>
<div class="row">
<% @followed_posts.each do |post| %>
<div class="col s12 m6 l4">
  <div class="card small">
    <div class="card-image">
      <%= image_tag post.image.url(:thumb) %>
      <span class="card-title"><%= post.title %></span>
    </div>
    <div class="card-content">
      <%= post.description %> <br>
      <%= post.user.email %> <br>
      <div class="like">
       <i class="tiny material-icons">thumb_up</i><%= post.get_upvotes.size %>
     </div>
     <div class="dislike">
       <i class="tiny material-icons">thumb_down</i><%= post.get_downvotes.size %>
     </div>
    </div>
    <div class="card-action">
      <%= link_to 'Show', post %>
    </div>
  </div>
</div>

<% end %>
</div>
<% else %>

  <h2>  You have not followed any artist yet. </h2>

<% end %>
